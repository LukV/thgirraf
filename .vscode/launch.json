{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "My FastAPI debugger",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.main:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/backend/.env"
        }
    ]
}